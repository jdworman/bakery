<% cakes =
[['images/rocky.png', 'Rocky Road Cupcake', '7.50', 'This is a rocky road cupcake.'],
['images/oreo.png', 'Orep Cupcake', '7.50', 'This is an orea cupcake.'],
['images/peanut.png', 'Peanut Butter Cupcake', '7.50', 'This is a peanut butter cupcake.'],
['images/baw.png', 'Black and White Cupcake', '7.50', 'This is a black and white cupcake.'],
['images/cccd.png', 'Choclate Chip Cookie Dough Cupcake', '7.50', 'This is a choclate chip cookie dough cupcake.'],
['images/rv.png', 'Red Velvet Cupcake', '7.50', 'This is a red velvet cupcake.'],
['images/lemon-c.png', 'Lemon Coconut Cupcake', '7.50', 'This is a lemon coconut cupcake.'],
['images/vanilla.png', 'Vanilla Sprinkle Cupcake', '7.50', 'This is a vanilla sprinkle cupcake.'],
['images/kiss.png', 'Choclate Kiss Sprinkle Cupcake', '7.50', 'This is a choclate kiss sprinkle cupcake.']]
%>

 <div class="container">
 <% cakes.each do |cake| %>
 <% img = cake[0] %>
 <% name = cake[1] %>
 <% price = cake[2] %>
 <% description = cake[3] %>
 <div class="item">
<img src="<%= img %>">
<h2><%= name %></h2>
<h3><%= description %><h3>
<h3><%= price %><h3>
 </div>
<% end %>
</div>
